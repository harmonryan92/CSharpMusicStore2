@model IEnumerable<MusicStore.Models.Song>

@{
    ViewData["Title"] = "Ryan's Music Store";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        @for (int n = 0; n < Model.Count(); n++)
        {
            <li data-target="#myCarousel" data-slide-to="@n" class="@(n==0)?" active":"")"></li>
        }
    </ol>
    <div class="carousel-inner" role="listbox">
        @for (int n = 0; n < Model.Count(); n++)
        {
            <div class="@(n==0?" item active":"item")">
                <img src="@Model.ElementAt(n).ImagePath" alt="Album Cover" class="img-responsive center-block" width="240" height="80" />
                <div class="carousel-caption" role="option">
                    <p>
                        Download
                        <a class="btn btn-default" href="ShoppingCart/@Model.ElementAt(n).Id">
                            @Model.ElementAt(n).Price
                        </a>
                    </p>
                </div>
            </div>
        }
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>What's New</h2>
        <ul>
            <li>None of it. Nothing is new. It's as it always was.</li>
        </ul>
    </div>
    <div class="col-md-4">
        <h2>Join Our Mailing List</h2>
        <ul>
            <li>There is no mailing list</li>
        </ul>
    </div>
    <div class="col-md-4">
        <h2>Song of the Day</h2>
        <ul>
            <li>Same as yesterday.</li>
        </ul>
    </div>
</div>